{# GET VARIABLES FOR META TAGS #}
{% set url = app.request.uri|default('') %}
{% set title = extension.seo.title|default(content.title|default('')) %}
{% set description = extension.seo.description|default(content.article|default('')) %}

{# DESCRIPTION #}
{% if (description is not empty) and (description.length > 146) %}
    {% set description = description|striptags|slice(0, 146) ~ '...' %}
{% else %}
    {% set description = description|striptags %}
{% endif %}

{# META SEO #}
{% autoescape false %}
    {% if (extension is defined) and (content is defined) %}
        {{ meta_seo(extension|default(''), content) }}
    {% endif %}

    {# META ALTERNATE #}
    {% if (urls is defined) %}
        {{ meta_alternate(urls) }}
    {% endif %}
{% endautoescape %}

{# CUSTOM META TAGS #}
<meta name="language" content="{{ language|default('') }}">
<meta name="publisher" content="{{ company|default('') }}">
<meta name="author" content="{{ client|default('') }}">
<meta name="copyright" content="{{ client|default('') }}">
<meta name="audience" content="all">
<meta name="distribution" content="global">
<meta name="image" content="{{ image|default('') }}">

{# OPEN GRAPH - OG - TAGS #}
<meta property="og:site_name" content="{{ client|default('') }}">
<meta property="og:url" content="{{ url|default('') }}">
<meta property="og:title" content="{{ title|default('') }}">
<meta property="og:type" content="website">
<meta property="og:image" content="{{ image|default('') }}">
<meta property="og:description" content="{{ description|default('') }}">
<meta property="og:locale" content="{{ language|default('') }}">

{# DUBLIN CORE - DC - TAGS #}
<meta name="DC.Title" content="{{ client|default('') }}">
<meta name="DC.Publisher" content="{{ company|default('') }}">
<meta name="DC.Copyright" content="{{ client|default('') }}">

{# TWITTER TAGS #}
<meta name="twitter:card" content="summary">
<meta name="twitter:url" content="{{ url|default('') }}">
<meta name="twitter:title" content="{{ title|default('') }}">
<meta name="twitter:description" content="{{ description|default('') }}">
<meta name="twitter:image" content="{{ image|default('') }}">


{# BOT TAGS #}
<meta name="revisit-after" content="2 days">
